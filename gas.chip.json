    {
      "id": "gas_ammonia",
      "label": "Ammonia Level",
      "type": "range",
      "min": 0,
      "max": 4095,
      "step": 1
    },
    {
      "id": "gas_so2",
      "label": "Sulfur Dioxide Level",
      "type": "range",
      "min": 0,
